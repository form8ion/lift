{
  "name": "@form8ion/lift",
  "description": "tool for running sub-scaffolders on existing projects",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "engines": {
    "node": "^14.15.0"
  },
  "sideEffects": false,
  "files": [
    "lib/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "form8ion/lift",
  "bugs": "https://github.com/form8ion/lift/issues",
  "homepage": "https://npm.im/@form8ion/lift",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "lint:gherkin": "gherkin-lint",
    "lint:engines": "ls-engines",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "npm run build:js",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "pregenerate:md": "npm run build",
    "generate:md": "remark . --output",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/register": "7.17.7",
    "@cucumber/cucumber": "8.1.2",
    "@form8ion/babel-preset": "1.6.87",
    "@form8ion/commitlint-config": "1.0.31",
    "@form8ion/eslint-config": "5.0.1",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/eslint-config-mocha": "2.0.1",
    "@form8ion/remark-lint-preset": "3.0.0",
    "@rollup/plugin-commonjs": "22.0.0",
    "@travi/any": "2.0.20",
    "ban-sensitive-files": "1.9.18",
    "c8": "7.11.2",
    "chai": "4.3.6",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.2",
    "husky": "7.0.4",
    "lockfile-lint": "4.7.4",
    "ls-engines": "0.6.5",
    "mocha": "9.2.2",
    "mock-fs": "5.1.2",
    "npm-run-all": "4.1.5",
    "remark-cli": "10.0.1",
    "remark-toc": "8.0.1",
    "remark-usage": "10.0.1",
    "rimraf": "3.0.2",
    "rollup": "2.71.1",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "13.0.2"
  },
  "dependencies": {
    "@form8ion/overridable-prompts": "^1.0.1",
    "@form8ion/project": "^12.0.0",
    "@form8ion/results-reporter": "^1.1.0",
    "@travi/cli-messages": "^1.0.4",
    "hosted-git-info": "^5.0.0",
    "inquirer": "^8.0.0",
    "nodegit": "^0.27.0"
  }
}
